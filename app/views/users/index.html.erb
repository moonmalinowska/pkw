<p id="notice"><%= notice %></p>

<h1>Użytkownicy</h1>

<table>
  <thead>
  <tr>
    <th>Login</th>
    <th>Hasło</th>
    <th>Rola</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @users.each do |user| %>
      <tr>
        <td><%= user.login %></td>
        <td><%= user.password %></td>
        <td><%= user.role %></td>
        <td><%= link_to 'Wyświetl', user %></td>
        <td><%= link_to 'Edytuj', edit_user_path(user) %></td>
        <td><%= link_to 'Usuń', user, method: :delete, data: { confirm: 'Jesteś pewien, że chcesz usunąć użytkownika?' } %></td>
      </tr>
  <% end %>

  </tbody>
</table>