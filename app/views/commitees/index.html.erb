<p id="notice"><%= notice %></p>
<h1>Listing Commitees</h1>
<table>
  <thead>
  <tr>
    <th>Nazwa</th>
    <th>Logo</th>
    <th>Partia</th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @commitees.each do |commitee| %>
      <tr>
        <td><%= commitee.name %></td>
        <td><%= commitee.logo %></td>
        <td><%= commitee.party %></td>
        <td><%= commitee.vote %></td>
        <td><%= link_to 'Show', commitee %></td>
        <td><%= link_to 'Edit', edit_commitee_path(commitee) if can? :update, Commitee %></td>
        <td><%= link_to 'Destroy', commitee, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Commitee %></td>
      </tr>
  <% end %>
  </tbody>
</table>
<br>
<%= link_to 'New Commitee', new_commitee_path %>