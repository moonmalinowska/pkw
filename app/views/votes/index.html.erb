<p id="notice"><%= notice %></p>

<h1>Listing Votes</h1>

<table>
  <thead>
    <tr>
      <th>Partia:</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <% @votes.each do |vote| %>
      <tr>
        <td><%= vote.vote %></td>
        <td><%= link_to 'Show', vote if can? :update, Vote %></td>
        <td><%= link_to 'Edit', edit_vote_path(vote) if can? :update, Vote %></td>
        <td><%= link_to 'Destroy', vote, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, Vote %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Vote', new_vote_path %>
