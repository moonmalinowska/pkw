<h1>Edycja głosów dla okręgu: <%= @district.name %> </h1>

<%= form_for(@district) do |f| %>
    <% if @district.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@district.errors.count, "error") %> prohibited this district from being saved:</h2>

          <ul>
            <% @district.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field">

    </div>

    <div class="field">
      <strong>Głosy nieważne - liczba skreśleń:</strong><br>
      <%= f.number_field :invalid_vote %>
    </div>
    <div class="field">
      <strong>Głosy nieważne - puste:</strong><br>
      <%= f.number_field :empty_vote %>
    </div>
    <div class="field">
      <strong>Głosy nieważne - pozostałe:</strong><br>
      <%= f.number_field :other_vote %>
    </div>
    <div class="field">
      <strong>Liczba wydanych kart:</strong><br>
      <%= f.number_field :issued_voting_card %>
    </div>
    <div class="actions">
      <%= f.submit %>
    </div>

<%= link_to 'Wyświetl', @district %> |
<%= link_to 'Powrót', districts_path %>
<% end %>