<p id="notice"><%= notice %></p>


<table>
  <% if can? :index, Voivodship%>
  <thead>
    <tr>

      <th>Okręg</th>
      <th>Województwo</th>
      <th>Elektorat</th>
      <th>Liczba mandatów</th>

      <th>Liczba wydanych kart</th>
      <th>Zgodność liczby kart</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<% end %>
  <tbody>
  <h3><%= link_to 'Pokaż głosy w swoim okręgu', district_path(current_user) if can? :update, Commitee%></h3>
          <h3><%= link_to 'Edytuj głosy w swoim okręgu', edit_district_path(current_user) if can? :update, Commitee%></h3>

<% if can? :index, Voivodship%>
      <h2>Lista okręgów</h2>


      <% @districts.each do |district| %>
      <tr>
        <td><%= district.name %></td>
        <td><%= district.voivodship.name %></td>

        <td><%= district.electorate %></td>
        <td><%= district.mandate %></td>
        <td><%= district.issued_voting_card %></td>
        <td><%= district.cards %></td>



        <td><%= link_to 'Usuń', district, method: :delete, data: { confirm: 'Are you sure?' } if can? :destroy, District%></td>
      </tr>
      <% end %>
  <% end %>


  </tbody>
</table>

<br>
<% @districts.each do |district| %>

<% if can? :create, district %>
    <%= link_to 'New District', new_district_path %>
<% end %>
<% end %>




