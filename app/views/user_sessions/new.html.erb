<h1>Zaloguj</h1>
<%= form_for @user_session, :as => :user_session, :url => { :action => "create" } do |f| %>
    <p>
      <strong>Login:</strong> <br />
      <%= f.text_field :login %>
    </p>
    <p>
      <strong>Has≈Ço:</strong><br />
      <%= f.password_field :password %>
    </p>
    <p>
      <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
    </p>
    <p>
      <br />
      <%= f.submit "Zaloguj" %>
    </p>
<% end %>